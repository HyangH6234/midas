<%# ---------------------------------------------------------
    form.ejs: "글 작성"과 "글 수정"을 한 템플릿에서 처리하는 뷰
신규 작성: content 객체가 빈 객체인 경우
수정 모드: content 객체에 기존 데이터가 있을 경우
--------------------------------------------------------- %>
<%
// 수정 모드 여부 확인
const isMod = Object.keys(content).length > 0;

// 페이지 제목 결정
const pageTitle = isMod ? '글 수정' : '글 작성';

// 폼 action URL 결정: 수정 시 PUT 메소드 사용
const action = isMod ? ('/board/' + content.no + '?_method=PUT') : '/board';

// 제출 버튼 텍스트 결정
const buttonTitle = isMod ? '수정 완료' : '등록';

// 취소 버튼 URL 결정
const cancelUrl = isMod ? ('/board/' + content.no) : '/board';
%>
<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= pageTitle %> - MIDAS</title>
  
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" crossorigin="anonymous">
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
 
  <%- include('nav') %>

  <div class="container w-75 m-auto my-4">
    <h2 class="my-4"><%= pageTitle %></h2>
    
    <form action="<%= action %>" method="post">
      <div class="mb-3">
        <label for="title" class="form-label">제목</label>
        <input
          type="text"
          id="title"
          name="title"
          class="form-control"
          placeholder="제목을 입력하세요"
          value="<%= content.title || '' %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="content" class="form-label">내용</label>
        <textarea
          id="content"
          name="content"
          rows="8"
          class="form-control"
          placeholder="내용을 입력하세요"
          required
        ><%= content.content || '' %></textarea>
      </div>
      <div class="text-end">
        <button type="submit" class="btn btn-primary"><%= buttonTitle %></button>
        <a href="<%= cancelUrl %>" class="btn btn-secondary ms-2">취소</a>
      </div>
    </form>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"
  ></script>
</body>
</html>