  <div class="bg-aurora"></div>
  <!-- 상단 공통 네비게이션 -->
  <header class="navbar">
    <div class="logo"><a href="/">MIDAS</a></div>
    <ul class="links">
      
      <li><a href="/location">Location</a></li>
      <% if (loginUserName) { %>
        
